<div class="container">
  <h1>Edição de Funcionários</h1>
  <form action="/funcionarios/edit" method="POST">
    <input type="hidden" name="id" value="{{funcionario._id}}">
    <label for="nome">Nome:</label>
    <input type="text" name="nome" value="{{funcionario.nome}}">
    <label for="endereco">Endereço:</label>
    <input type="text" name="endereco" value="{{funcionario.endereco}}">
    <label for=" cidade">Cidade:</label>
    <input type="text" name="cidade" value="{{funcionario.cidade}}">
    <label for=" estado">Estado:</label>
    <select name="estado">
      <option value="{{funcionario.estado}}">{{funcionario.estado}}</option>
      <option value="GO">GO</option>
      <option value="MG">MG</option>
      <option value="SP">SP</option>
    </select>
    <label for="email">Email:</label>
    <input type="email" name="email" value="{{funcionario.email}}">
    <label for="data_nascimento">Data nascimento:</label>
    <input type="text" name="data_nascimento" value="{{funcionario.data_nascimento}}">
    <label for="salario">Salário:</label>
    <input type="number" name="salario" step="0.01" value="{{funcionario.salario}}">
    <input type="submit" value="Salvar">
  </form>
</div>